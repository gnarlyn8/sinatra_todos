<ul id="lists">
  <% sorted_lists(@lists) do |list| %>
    <a href="/lists/<%= list[:id] %>">
      <li class="<%= list_class(list)%>">
        <h2><%= list[:name] %></h2>
        <p>
          <%= todos_remaining_count(list) %> / <%= total_todos(list) %>
        </p>
      </li>
    </a>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">Add New Todo List</a>  
<% end %>